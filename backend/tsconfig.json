{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "esnext",//"nodenext",
    "moduleResolution": "bundler", // モジュール解決戦略
    "target": "es2022",//"esnext",          // 出力するJavaScriptのバージョン
    "types": ["node"],         // グローバルに利用する型定義ファイル
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,             // ソースマップの生成
    "declaration": true,  // 宣言ファイルの生成
    "declarationMap": true, // 宣言マップの生成

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true, // 未定義の可能性があるインデックスアクセスをエラーにする
    "exactOptionalPropertyTypes": true, // 厳密なオプショナルプロパティ型チェック

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,               // Enable all strict type-checking options.
    "jsx": "react-jsx", // React 17+
    "verbatimModuleSyntax": true, // モジュール構文をそのまま保持
    "isolatedModules": true, // 各ファイルを独立したモジュールとして扱う
    "noUncheckedSideEffectImports": true, // 副作用のないインポートを禁止
    "moduleDetection": "force", // モジュール検出を強制
    "skipLibCheck": true, // ライブラリの型チェックをスキップ
    "strictNullChecks": true // null と undefined の厳密なチェック
  },

  "include": ["src"] // コンパイル対象フォルダ
}
